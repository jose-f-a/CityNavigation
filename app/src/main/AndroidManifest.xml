<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.cm.citynavigation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CityNavigation">
        <activity
            android:name=".Map"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".NoteList"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".EditNote"
            android:parentActivityName=".NoteList"
            android:theme="@style/Theme.CityNavigation.NoActionBar" />

        <activity
            android:name=".NewNote"
            android:parentActivityName=".NoteList"
            android:theme="@style/Theme.CityNavigation.NoActionBar" />

        <activity
            android:name=".Login"
            android:theme="@style/Theme.CityNavigation.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.CityNavigation.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>