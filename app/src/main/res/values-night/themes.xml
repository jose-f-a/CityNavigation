<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CityNavigation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorSecondary">@color/secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white_ish</item>
        <item name="backgroundColor">@color/black_ish</item>
    </style>

    <style name="Theme.CityNavigation.CustomToolbar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_chevron_left_24</item>
        <item name="background">@null</item>
    </style>

    <style name="Theme.CityNavigation.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>